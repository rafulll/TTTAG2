                    android:layout_width="wrap_content"
                    android:layout_height="80dp" android:id="@+id/button3"
                    android:onClick="marcar"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" android:id="@+id/button4"
                    android:onClick="marcar"/>
            <Button
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" android:id="@+id/button5"
                    android:onClick="marcar"/>
            <Button
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" android:id="@+id/button6"
                    android:onClick="marcar"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" android:id="@+id/button7"
                    android:onClick="marcar"/>
            <Button
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" android:id="@+id/button8"
                    android:onClick="marcar"/>
            <Button
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" android:id="@+id/button9"
                    android:onClick="marcar"/>
        </TableRow>

    </TableLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_gravity="bottom|center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" tools:text="AUSHUASHUS" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintBottom_toBottomOf="@+id/tableLayout"/>

